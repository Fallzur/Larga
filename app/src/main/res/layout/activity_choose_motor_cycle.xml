<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChooseMotorCycle">





    <ImageView
        android:id="@+id/nmax"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Choos_nav"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/nmax"
        android:visibility="visible"></ImageView>

    <ImageView
        android:id="@+id/aerox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Choos_nav"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/aerox"
        android:visibility="invisible"></ImageView>
    <ImageView
        android:id="@+id/adv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/Choos_nav"
        android:layout_marginBottom="-20dp"
        android:src="@drawable/adv"
        android:visibility="invisible"></ImageView>


    <RelativeLayout
        android:id="@+id/Choos_nav"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="-2dp"
        android:background="@drawable/bottom_radius">

        <TextView
            android:id="@+id/MotorTypeChoosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:text="PILIAN"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>

        <RelativeLayout
            android:id="@+id/relative3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/MotorTypeChoosed"
            android:background="#FF7222"
            android:padding="15dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Choos Your Desired"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_alignParentStart="true"
                    android:text="MotorCycle"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>


            <ImageView
                android:id="@+id/img1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:src="@drawable/largaloglog"></ImageView>
        </RelativeLayout>


        <GridLayout
            android:id="@+id/Choosebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:rowCount="1">

            <TextView
                android:id="@+id/TVnmax"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:background="@drawable/main_buttons"
                android:backgroundTint="#FF1C1C20"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:text="NMAX"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                android:foreground="@drawable/ripple_rounded"/>

            <TextView
                android:id="@+id/TVaerox"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:background="@drawable/main_buttons"
                android:backgroundTint="#FF1C1C20"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:text="AEROX"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                android:foreground="@drawable/ripple_rounded"/>

            <TextView
                android:id="@+id/TVadv"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:layout_margin="10dp"
                android:background="@drawable/main_buttons"
                android:backgroundTint="#FF1C1C20"
                android:padding="20dp"
                android:scaleType="fitCenter"
                android:text="ADV"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:clickable="true"
                android:foreground="@drawable/ripple_rounded"/>


        </GridLayout>


        <Button
            android:id="@+id/coN_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Choosebtn"
            android:layout_centerInParent="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="#FF7222"
            android:foreground="@drawable/ripple_rounded"
            android:text="CONTINUE"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>