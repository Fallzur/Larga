<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:background="#ff7222"
    android:foreground="@drawable/ripple_rounded"
    android:paddingBottom="2dp">

        <RelativeLayout
            android:id="@+id/nameHolder"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#32323D"
            android:padding="10dp">
<ImageView
    android:id="@+id/imhride"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/favlog">
</ImageView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/imhride"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/ridername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rider name"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ridername"
                    android:text="Status/"
                    android:textColor="#44FF00"></TextView>
                <TextView
                    android:id="@+id/TypeOfstatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ridername"
                    android:layout_toEndOf="@id/status"
                    android:text="Type of status"
                    android:textColor="#F60505"></TextView>

                <TextView
                    android:id="@+id/Availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unavailable"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:padding="3dp"></TextView>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>
