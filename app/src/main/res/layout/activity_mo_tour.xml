<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoTour">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/panelbackground" />


<TextView
    android:id="@+id/TVTittleLarga"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Larga Motour"
    android:textColor="#FFFFFF"
    android:textSize="20dp"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"/>


    <RelativeLayout
        android:id="@+id/RLButuan"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/TVTittleLarga"
        android:background="#FF7222"
        android:layout_marginTop="70dp"
        android:padding="15dp">
        <TextView
           android:id="@+id/TVBUtuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Butun City"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TVBUtuan"
            android:text="in the beginning , there was no Phillipines"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>


    </RelativeLayout>


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/largaloglog"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/RLButuan"
        android:layout_marginBottom="-100dp"/>


    <RelativeLayout
        android:id="@+id/Con_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/RLButuan"
        android:background="#C832323D"
        android:padding="3dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your Trip Desired Touring location"
            android:textColor="#99FFFFFF"
            android:textSize="18dp"
            android:textAlignment="center"
            android:layout_centerVertical="true" />

    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/Con_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#749A9A9A"
        android:layout_below="@+id/Con_1"
        android:foreground="@drawable/ripple_rounded"
        android:padding="15dp">

        <TextView
            android:id="@+id/setA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Trip A - 3 Destination"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />

    </RelativeLayout>






    <RelativeLayout
        android:id="@+id/Con_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#885E5E5E"
        android:layout_below="@+id/Con_2"
        android:foreground="@drawable/ripple_rounded"
        android:padding="15dp">

        <TextView
            android:id="@+id/setB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trip B - 3 Destination"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="18dp" />


    </RelativeLayout>
















</RelativeLayout>